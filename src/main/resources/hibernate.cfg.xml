<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:~/.babasdevel/mercedes/db</property>
        <property name="connection.pool_size">5</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">false</property>
        <mapping class="com.babasdevel.models.Teacher"/>
        <mapping class="com.babasdevel.models.Level"/>
        <mapping class="com.babasdevel.models.LevelTeacher"/>
        <mapping class="com.babasdevel.models.Permission"/>
        <mapping class="com.babasdevel.models.Section"/>
        <mapping class="com.babasdevel.models.Classroom"/>
        <mapping class="com.babasdevel.models.Grade"/>
        <mapping class="com.babasdevel.models.Course"/>
        <mapping class="com.babasdevel.models.Skill"/>
        <mapping class="com.babasdevel.models.Partial"/>
        <mapping class="com.babasdevel.models.TeacherCourse"/>
        <mapping class="com.babasdevel.models.Cargo"/>
        <mapping class="com.babasdevel.models.Tutor"/>
        <mapping class="com.babasdevel.models.Student"/>
        <mapping class="com.babasdevel.models.Registration"/>
        <mapping class="com.babasdevel.models.Note"/>
    </session-factory>
</hibernate-configuration>